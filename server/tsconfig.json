{
    "include": ["src"],
    "exclude": ["no_compile/**/*"],
    "compilerOptions": {
        "lib": ["esnext"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2015",
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "preserveSymlinks": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "types": ["node", "jest"],
        "typeRoots": ["node_modules/@types"]
    }
}
